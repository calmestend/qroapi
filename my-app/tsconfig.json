{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strict": true,
		"baseUrl": "./",
		"paths": {
			"@components/*": ["src/components/*"],
			"@screens/*": ["src/screens/*"],
			"@lib/*": ["src/lib/*"],
			"@navigation/*": ["src/navigation/*"],
			"@contexts/*": ["src/contexts/*"],
			"@assets/*": ["assets/*"]
		},
	},
	"include": ["src/**/*", "App.tsx"],
	"exclude": ["node_modules", "build"]
}

